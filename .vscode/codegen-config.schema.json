{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Minimal GraphQL Codegen config schema (project-local subset)",
  "type": "object",
  "properties": {
    "schema": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } }
      ]
    },
    "documents": {
      "oneOf": [
        { "type": "string" },
        { "type": "array", "items": { "type": "string" } }
      ]
    },
    "generates": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "plugins": {
            "type": "array",
            "items": { "type": "string" }
          },
          "config": { "type": "object" }
        },
        "required": ["plugins"]
      }
    }
  },
  "required": ["schema", "generates"]
}
